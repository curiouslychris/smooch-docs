        <% current_page.data.includes && current_page.data.includes.each do |include| %>
          <% if include.match(/^--/) %>
              <h1 class="section-header" id="<%= include.match(/^--(.*)/)[1].downcase.gsub(" ", "-") %>">
                  <%= include.match(/^--(.*)/)[1] %>
              </h1>
          <% else %>
